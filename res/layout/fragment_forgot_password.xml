<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/headerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dip"
        android:paddingLeft="5dip"
        android:text="Request New Password"
        android:textColor="@color/dividerColor"
        android:textIsSelectable="true"
        android:textSize="25sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/firstLine"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_below="@id/headerTextView"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:background="@android:drawable/divider_horizontal_textfield" />

    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/firstLine"
        android:layout_marginLeft="8dip"
        android:layout_marginTop="25dip"
        android:text="Username or Email Address"
        android:textColor="@color/dividerColor"
        android:textIsSelectable="true"
        android:textSize="14sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/textEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/usernameTextView"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:singleLine="true" />

    <TextView
        android:id="@+id/helpTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textEmail"
        android:layout_marginLeft="5dip"
        android:text="@string/resetHelpString" />

    <Button
        android:id="@+id/requestPswdBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/helpTxt"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="5dip"
        android:background="@drawable/greenbutton"
        android:onClick="doResetLogin"
        android:text="E-mail new password"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_below="@id/requestPswdBtn"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="10dip"
        android:background="@android:drawable/divider_horizontal_textfield" />

</RelativeLayout>