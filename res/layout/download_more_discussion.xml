<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/downloadMoreLyt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/turqoise_transparent_bg" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <ProgressBar
            android:id="@+id/aboutusprogress"
            style="@android:style/Widget.ProgressBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:indeterminateDrawable="@drawable/progress_image_holo" />

        <TextView
            android:id="@+id/showMoreTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Load more discussions"
            android:textColor="#000000"
            android:textSize="13sp" />
    </LinearLayout>

</RelativeLayout>