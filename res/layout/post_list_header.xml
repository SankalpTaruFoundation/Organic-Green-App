<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/coverPhtLyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eee" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Add Garden Photo"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/coverPhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/gardenNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/coverPhoto"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="3dip"
            android:layout_marginLeft="5dip"
            android:background="@drawable/roundbox_black"
            android:textColor="#fff"
            android:textIsSelectable="true"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/roundbox"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/edit_profile_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dip"
                android:layout_marginRight="2dip"
                android:background="@drawable/edit_btn" />
        </LinearLayout>
        
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/coverPhoto"
            android:layout_alignParentRight="true"
            android:background="@drawable/roundbox"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/chnge_cvr_pht"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dip"
                android:layout_marginRight="2dip"
                android:background="@drawable/open_gallery_btn" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/roundbox"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/chnge_cover_by_camerabtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dip"
                android:layout_marginRight="2dip"
                android:background="@drawable/open_camera_btn" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>