<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/roundbox_black" >

    <ImageView
        android:layout_width="50px"
        android:layout_height="50px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="5dip"
        android:background="@drawable/ic_launcher" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="5dip"
        android:text="NOTIFICATION"
        android:textColor="#fff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/closeDialogBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_close"
        android:padding="5dip" />

    <TextView
        android:id="@+id/notificationTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/closeDialogBtn"
        android:padding="10dip"
        android:text="Buy Organic solutions today sale discount 20% flat on all solutions range apply coupon RXC56TF"
        android:textColor="#fff"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:layout_alignParentBottom="true" >
    </LinearLayout>

</RelativeLayout>